@model SellerEditCampaignVM
<h1 class="h3">Edit Campaign</h1>
<hr />
<form asp-area="Seller" asp-controller="Campaign" asp-action="EditCampaign" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="CampaignId" name="CampaignId" value="@Model.CampaignId" />
    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group row mt-2">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-2">
                <label asp-for="Code" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Code" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-2">
                <label asp-for="DiscountPercentage" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="DiscountPercentage" />
                    <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-2">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea id="descriptionEditor" class="form-control" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-2">
                <label asp-for="CampaignImage" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="CampaignImage" class="form-control" type="file" name="file" id="file">
                    <span asp-validation-for="CampaignImage" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-2">
                <label asp-for="IsApproved" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" placeholder="@Model.IsApproved.ToString()" aria-label="Disabled input example" disabled readonly>
                </div>
            </div>

            <div class="form-group row mt-2">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/ckeditor5/ckeditor.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#descriptionEditor'))
            .catch(error => {
                console.error(error);
            });
    </script>
}