@model EditCategory2VM
<h1 class="h3">Create Category</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-area="Admin" asp-controller="Category2" asp-action="EditCategory2" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="Category2Id" value="@Model.Category2Id"/>
            <div class="form-group row mt-2">
                <label asp-for="Categories" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select name="CategoryId" class="form-select" aria-label="Default select example">
                        @if (Model.Category != null)
                        {
                            <option value="@Model.CategoryId" selected>@Model.Category.Name</option>
                        }
                        else
                        {
                            <option selected>Select Category</option>
                        }
                        @if (Model.Categories != null)
                        {
                            @foreach (var item in Model.Categories)
                            {
                                <option value="@item.CategoryId">@item.Name</option>
                            }
                        }
                    </select>
                </div>
            </div>

            <div class="form-group row mt-2">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-2">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Save Category</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
}