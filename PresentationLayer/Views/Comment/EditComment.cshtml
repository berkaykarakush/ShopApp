@model EditCommentVM
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@*comment - start*@
<div class="row mt-4">
    <div class="col-md-12">
        <div class="card mt-4">
            <h1 class="h-4 mt-4 card-title text-center">Comments</h1>
            <hr class="m-4" />
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card border-0">
                            <form asp-controller="Comment" asp-action="EditComment" enctype="application/x-www-form-urlencoded" method="post">
                                <input type="hidden" asp-for="CommentId"/>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <input type="checkbox" class="btn-check" id="btn-check-1" autocomplete="off">
                                        <label class="btn btn-outline-warning" for="btn-check-1"><i style="color: orange;" class="fa-solid fa-star"></i></label>

                                        <input type="checkbox" class="btn-check" id="btn-check-2" autocomplete="off">
                                        <label class="btn btn-outline-warning" for="btn-check-2"><i style="color: orange;" class="fa-solid fa-star"></i></label>

                                        <input type="checkbox" class="btn-check" id="btn-check-3" autocomplete="off">
                                        <label class="btn btn-outline-warning" for="btn-check-3"><i style="color: orange;" class="fa-solid fa-star"></i></label>

                                        <input type="checkbox" class="btn-check" id="btn-check-4" autocomplete="off">
                                        <label class="btn btn-outline-warning" for="btn-check-4"><i style="color: orange;" class="fa-solid fa-star"></i></label>

                                        <input type="checkbox" class="btn-check" id="btn-check-5" autocomplete="off">
                                        <label class="btn btn-outline-warning" for="btn-check-5"><i style="color: orange;" class="fa-solid fa-star"></i></label>
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="Description" for="exampleFormControlTextarea1" class="form-label">Example textarea</label>
                                        <textarea asp-for="Description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                    <div class="d-grid gap-2">
                                        <button class="btn btn-outline-warning" type="submit">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    @*comment list - start*@
                    <div class="col-md-12 mt-4">

                        <div class="card border-0">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-2">
                                        <h5 class="card-title">John Doe</h5>
                                    </div>
                                    <div class="col-md-9">
                                        <a class="h4 nav-link">
                                            <strong>
                                                <i class="fa-solid fa-star text-warning"></i>
                                                <i class="fa-solid fa-star text-warning"></i>
                                                <i class="fa-solid fa-star text-warning"></i>
                                                <i class="fa-solid fa-star text-warning"></i>
                                                <i class="fa-solid fa-star text-warning"></i>
                                                4.8
                                            </strong>
                                        </a>
                                    </div>
                                </div>
                                <p class="card-text mt-2">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                            </div>
                        </div>

                        <hr />

                        <div class="card border-0">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-2">
                                        <h5 class="card-title">John Doe</h5>
                                    </div>
                                    <div class="col-md-9">
                                        <a class="h4 nav-link">
                                            <strong>
                                                <i class="fa-solid fa-star text-warning"></i>
                                                <i class="fa-solid fa-star text-warning"></i>
                                                <i class="fa-solid fa-star text-warning"></i>
                                                <i class="fa-solid fa-star text-warning"></i>
                                                <i class="fa-solid fa-star text-warning"></i>
                                                4.8
                                            </strong>
                                        </a>
                                    </div>
                                </div>
                                <p class="card-text mt-2">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                            </div>
                        </div>

                        <div class="d-grid gap-2 col-6 mx-auto mt-4">
                            <button class="btn btn-warning" type="submit">
                                <strong>All Comments</strong>
                            </button>
                        </div>


                        @*comment list - end*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@*comment - end*@

@section Scripts
    {
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
}
