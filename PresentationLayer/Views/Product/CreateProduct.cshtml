@model CreateProductVM
<h1 class="h3">Create Product</h1>
<hr />
<div class="row">
   <div class="col-md-8">
        <form asp-controller="Product" asp-action="CreateProduct" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group row mt-2">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-2">
                <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Price" min="1" value="1"/>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-2">
                <label asp-for="Quantity" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Quantity" value="1" min="1"/>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-2">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea id="descriptionEditor" class="form-control" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group row mt-2">
                <label asp-for="ImageUrls" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ImageUrls" class="form-control" type="file" name="files" id="files" multiple>
                    <span asp-validation-for="ImageUrls" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-2">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Save Product</button>
                </div>
            </div>
        </form>
   </div>
</div>


@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/ckeditor5/ckeditor.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#descriptionEditor'))
            .catch(error => {
                console.error(error);
            });
    </script>
}