@model EditProductVM
<h1 class="h3">Edit Product</h1>
<hr />
<form asp-controller="Product" asp-action="EditProduct" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ProductId" name="ProductId" value="@Model.ProductId"/>
    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group row mt-2">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-2">
                <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Price" min="1" value="1" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-2">
                <label asp-for="Quantity" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Quantity" value="1" min="1" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-2">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea id="descriptionEditor" class="form-control" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-2">
                <div class="row">
                    @foreach (var item in Model.ImageUrls)
                    {
                        <div class="card m-3" style="width: 80px;">
                            <img src="~/img/@item.Url" class="card-img-top" alt="@item.Url">
                        </div>
                    }
                </div>
            </div>

            <div class="form-group row mt-2">
                <label asp-for="ImageUrls" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ImageUrls" class="form-control" type="file" name="files" id="files" multiple>
                    <span asp-validation-for="ImageUrls" class="text-danger"></span>
                </div>
            </div>

                <div class="form-group row mt-2">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">Save Product</button>
                    </div>
                </div>
        </div>
        <div class="col-md-4">
           @* @for (int i = 0; i < Model.SelectedCategories.Count; i++)
            {
                <input type="hidden" name="SelectedCategories[@i].CategoryId" value="@Model.SelectedCategories[i].CategoryId" />
                <input type="hidden" name="SelectedCategories[@i].Name" value="@Model.SelectedCategories[i].Name" />
            }*@
            @foreach (var item in Model.Categories)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" 
                    name="categoryIds"
                    value="@item.CategoryId"
                    id="category_@(item.CategoryId)" 
                    @(Model.SelectedCategories.Any(i => i.CategoryId == item.CategoryId) ? "checked":"" )>
                    <label class="form-check-label" for="category_@(item.CategoryId)">
                        @item.Name
                    </label>
                </div>
            }
            <hr />

            <div class="form-check">
                <input asp-for="IsApproved" class="form-check-input" type="checkbox">
                <label asp-for="IsApproved" class="form-check-label"></label>
            </div>
            <div class="form-check">
                <input asp-for="IsHome" class="form-check-input" type="checkbox">
                <label asp-for="IsHome" class="form-check-label"></label>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/ckeditor5/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#descriptionEditor'))
            .catch(error => {
                console.error(error);
            });
    </script>
}