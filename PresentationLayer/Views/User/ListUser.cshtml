@model IEnumerable<User>

<div class="row">
    <div class="col-md-12">
        <h1>Users</h1>
        <hr />
        <a class="btn btn-outline-primary" asp-controller="Admin" asp-action="CreateUser">Create User</a>
        <table id="userTable" class="table table-bordered mt-4">
            <thead>
                <tr>
                    <td>FirstName</td>
                    <td>LastName</td>
                    <td>UserName</td>
                    <td>Email</td>
                    <td>EmailConfirmed</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td class="@(item.EmailConfirmed?"":"bg-warning")">@item.EmailConfirmed</td>
                            <td>
                                <a href="/admin/user/@item.Id" class="btn btn-primary btn-sm mr-2">Edit</a>

                                <form asp-controller="account" asp-action="sendconfirmmail" method="post" style="display: inline;">
                                    <input type="hidden" name="userId" value="@item.Id">
                                    <button type="submit" class="btn btn-danger btn-sm">Confirm Email</button>
                                </form>
                                <form asp-controller="account" asp-action="sendforgotpassword" method="post" style="display: inline;">
                                    <input type="hidden" name="email" value="@item.Email">
                                    <button type="submit" class="btn btn-danger btn-sm">Reset Password Email</button>
                                </form>
                                <form action="/admin/user/delete" method="post" style="display: inline;">
                                    <input type="hidden" name="UserId" value="@item.Id">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>No Users</h3>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>

@section Css{
    <script src="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css"></script>
}
@section Scripts{
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        new DataTable('#userTable');
    </script>
}