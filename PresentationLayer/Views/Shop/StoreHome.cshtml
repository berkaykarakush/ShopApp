@model StoreHomeVM

<div class="card">
    <div class="card-body bg-dark">
        <img src="~/img/@Model.StoreImage" alt="@Model.StoreImage" class="float-start rounded-circle" style="width: 100px; height: 100px;">
        <h1 class="h3 card-title text-white">@Model.StoreName</h1>
    </div>
    <div class="card-footer">
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-controller="Shop" asp-action="StoreList" asp-route-store="@Model.StoreUrl" class="h4 nav-link">All Products</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Shop" asp-action="Store" asp-route-store="@Model.StoreUrl" class="h4 nav-link">Home</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
</div>

<div class="row mt-5">
 @for (int i = 0; i < 10; i++)
    {
        <div class="col-md-2">
            <div class="card">
                <img src="~/img/creditcard.png" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Card title</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts
    {
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
}