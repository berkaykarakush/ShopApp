@model ProductDetailModel

<div class="row">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            @foreach (var item in Model.Categories)
            {
                <li class="breadcrumb-item">
                        <a asp-controller="Shop" asp-action="list" asp-route-category="@item.Url" class="btn btn-link p-0 mb-3">@item.Name</a>
                </li>  
            }
        </ol>
    </nav>
    <div class="col-md-5">
        <div class="card">
            <div id="product-carousel" class="carousel-dark carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                  @foreach (var item in Model.Product.ImageUrls)
                    {
                        <div class="carousel-item active">
                            <img src="~/img/@item.Url" class="card-img-top w-100" alt="@item.Url" style="height: 500px;">
                        </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#product-carousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>

                <button class="carousel-control-next" type="button" data-bs-target="#product-carousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="bg-dark visually-hidden">Next</span>
                </button>
            </div>
            <div class="card-body">
                <div class="row mt-4">
                    <div class="col-md-2"></div>
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="card border-0">
                                    <img  src="~/img/@Model.Product.ProductImage" class="card-img-top w-100" alt="@Model.Product.ProductImage" style="height: 50px; width: 5px;">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card border-0">
                                    <img  src="~/img/@Model.Product.ProductImage" class="card-img-top w-100" alt="@Model.Product.ProductImage" style="height: 50px;width: 5px;">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card border-0">
                                    <img  src="~/img/@Model.Product.ProductImage" class="card-img-top w-100" alt="@Model.Product.ProductImage" style="height: 50px;width: 5px;">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card border-0">
                                    <img  src="~/img/@Model.Product.ProductImage" class="card-img-top w-100" alt="@Model.Product.ProductImage" style="height: 50px;width: 5px;">
                                </div>
                            </div>
                        </div>
                    </div>
                 
                    <div class="col-md-2"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-7">
        <div class="row" style="height: 500px;">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card mb-4">
                            <div class="card-body">
                                <h1 class="h2 card-title">@Model.Product.Name</h1>
                                <h5 class="card-title text-success">********</h5>
                                <h5 class="card-title">3434 yorum</h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                       <div class="card mt-4">
                            <h5 class="card-title text-danger m-4">@Model.Product.Price <i class="fas fa-lira-sign" style="color:black;"></i></h5>
                            @if (Model.Product.Quantity > 0)
                            {
                                <div class="row">
                                    <div class="col-md-9 m-1">
                                        <form asp-controller="Cart" asp-action="AddToCart" method="post" class="form-inline">
                                            <input type="hidden" name="productId" value="@Model.Product.ProductId">
                                            <div class="input-group mb-3">
                                                <input type="number" name="quantity" value="1" min="1" step="1" max="@Model.Product.Quantity" class="form-control">
                                                <div class="input-group-append">
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="fas fa-cart-plus"></i>Add To Cart
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="col-md-2 m-1">
                                        <form asp-controller="#" asp-action="#" method="post" class="form-inline">
                                            <input type="hidden" name="productId" value="@Model.Product.ProductId">
                                            <div class="input-group-append">
                                                <button style="border-radius: 100%;" type="submit" class="btn btn-outline-danger">
                                                    <i class="fa-solid fa-heart"></i>
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="row">
                                    <div class="col-md-9 m-1">
                                        <form asp-controller="#" asp-action="#" method="post">
                                            <input type="hidden" name="productId" value="@Model.Product.ProductId">
                                            <button type="submit" class="btn btn-outline-dark"><i class="fa-solid fa-envelope"></i> Gelince Haber Ver</button>
                                        </form>
                                    </div>
                                    <div class="col-md-2 m-1">
                                        <form asp-controller="#" asp-action="#" method="post">
                                            <input type="hidden" name="productId" value="@Model.Product.ProductId">
                                            <button type="submit" class="btn btn-outline-danger"><i class="fa-solid fa-heart"></i></button>
                                        </form>
                                    </div>
                                </div>
                            }
                       </div>
                </div>
                </div>
            </div>
            <div class="col-md-6">
            <div class="card">
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body">
                    <h1 class="h5 card-title">Satici Adi</h1>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <a href="#" class="btn btn-primary">Magaza Git</a>
                </div>
            </div>
        </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card mt-4">
            <h1 class="h-4 mt-4 card-title text-center">Product Description</h1>
            <hr class="m-4"/>
            <div class="card-body">
                <p class="card-text text-black p-3">@Model.Product.Description</p>
            </div>
        </div>
    </div>
</div>


