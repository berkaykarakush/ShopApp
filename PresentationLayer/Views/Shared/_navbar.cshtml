<div class="navbar bg-danger navbar-dark navbar-expand-sm">
    <div class="container">
        <ul class="navbar-nav mr-auto">
        <a href="/" class="navbar-brand">Shopapp</a>
            <li class="nav-item">
                <a href="/products" class="nav-link">Products</a>
            </li>
            @if (User.Identity.IsAuthenticated)
            {
                <li class="nav-item">
                    <a href="" class="nav-link">Cart</a>
                </li>
                <li class="nav-item">
                    <a href="" class="nav-link">Orders</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="admin" asp-action="createproduct" class="nav-link">Add Product</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="admin" asp-action="listproduct" class="nav-link">Admin Products</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="admin" asp-action="listcategory" class="nav-link">Admin Categories</a>
                </li>
            }
        </ul>
        <ul class="navbar-nav ml-auto">
            @if (User.Identity.IsAuthenticated)
            {
                <li class="nav-item">
                    <a asp-controller="account" asp-action="manage" class="nav-link">@User.Identity.Name</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="account" asp-action="logout" class="nav-link">Logout</a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a asp-controller="account" asp-action="login" class="nav-link">Login</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="account" asp-action="register" class="nav-link">Register</a>
                </li>
            }
        </ul>
    </div>
</div>