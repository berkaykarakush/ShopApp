@model ProductModel
<h1 class="h3">Edit Product</h1>
<hr />
<form asp-controller="Admin" asp-action="EditProduct" method="post">
    <div class="row">
        <div class="col-md-8">
                <input type="hidden" name="ProductId" value="@Model.ProductId"/>
                <div class="form-group row mt-2">
                    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Name" />
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <label asp-for="Url" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Url" />
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Description" />
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Price" />
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <label asp-for="ImageUrl" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="ImageUrl" />
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">Save Product</button>
                    </div>
                </div>
        </div>
        <div class="col-md-4">
            @foreach (var item in (List<Category>)ViewBag.Categories)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" 
                    name="categoryIds"
                    value="@item.CategoryId"
                    id="category_@(item.CategoryId)" 
                    @(Model.SelectedCategories.Any(i => i.CategoryId == item.CategoryId) ? "checked":"" )>
                    <label class="form-check-label" for="category_@(item.CategoryId)">
                        @item.Name
                    </label>
                </div>
            }
        </div>
    </div>
</form>
