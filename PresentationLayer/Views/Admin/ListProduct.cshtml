@model ProductListViewModel

<div class="row">
    <div class="col-md-12">
        <h1>Admin Products</h1>
        <a class="btn btn-outline-primary btn-sm" asp-controller="Admin" asp-action="CreateCategory">Add Category</a>
        <table class="table table-bordered mt-4">
            <thead>
                <tr>
                    <td style="width: 30px;">Id</td>
                    <td style="width: 100px;">Image</td>
                    <td>Name</td>
                    <td style="width: 30px;">Price</td>
                    <td style="width: 30px;">Home</td>
                    <td style="width: 30px;">Approve</td>
                    <td style="width: 150px;"></td>
                </tr>
            </thead>
            <tbody>
               @if (Model.Products.Count>0)
                {
                    @foreach (var item in Model.Products)
                    {
                        <tr>
                            <td>@item.ProductId</td>
                            <td><img src="~/img/@item.ImageUrl" width="80"></td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>
                                @if (item.IsHome)
                                {
                                    <i class="fa-solid fa-circle-check" style="color: green;"></i>
                                }
                                else
                                {
                                    <i class="fa-solid fa-circle-xmark" style="color: red;"></i>
                                }
                            </td>
                            <td>
                                @if (item.IsApproved)
                                {
                                    <i class="fa-solid fa-circle-check" style="color: green;"></i>
                                }
                                else
                                {
                                    <i class="fa-solid fa-circle-xmark" style="color: red;"></i>
                                }
                            </td>
                            <td>
                                <a href="/admin/products/@item.ProductId" class="btn btn-primary btn-sm mr-2">Edit</a>


                                <form action="/admin/deleteproduct" method="post" style="display: inline;">
                                    <input type="hidden" name="ProductId" value="@item.ProductId">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>No products</h3>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>