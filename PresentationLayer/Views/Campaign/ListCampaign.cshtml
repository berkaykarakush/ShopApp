@model ListCampaignVM

<h1>Campaigns</h1>
<hr class="mb-3"/>
<div class="row mb-3">
    <div class="col-md-2">
        <a class="btn btn-outline-primary" asp-controller="Campaign" asp-action="CreateCampaign">Add Campaigns</a>
    </div>
    <div class="col-md-4"></div>
</div>

<div class="row">
    <div class="col-md-12">
        <table id="campaignTable" class="table table-bordered mt-4">
            <thead>
                <tr>
                    <td style="width: 30px;">Id</td>
                    <td style="width: 100px;">Image</td>
                    <td style="width: 100px;">Name</td>
                    <td>Description</td>
                    <td style="width: 30px;">Code</td>
                    <td style="width: 30px;">Home</td>
                    <td style="width: 150px;"></td>
                </tr>
            </thead>
            <tbody>
               @if (Model.Campaigns.Count>0)
                {
                    @foreach (var item in Model.Campaigns)
                    {
                        <tr>
                            <td>@item.CampaignId</td>
                            <td><a href="#"><img src="~/img/@item.CampaignImage" alt="@item.CampaignImage" width="80"></a></td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.Code</td>
                            <td>
                                @if (item.IsHome)
                                {
                                    <i class="fa-solid fa-circle-check" style="color: green;"></i>
                                }
                                else
                                {
                                    <i class="fa-solid fa-circle-xmark" style="color: red;"></i>
                                }
                            </td>
                            <td>
                                <form asp-controller="Campaign" asp-action="EditCampaign" method="get" style="display: inline;">
                                    <input type="hidden" name="CampaignId" value="@item.CampaignId">
                                    <button type="submit" class="btn btn-primary btn-sm">Edit</button>
                                </form>
                                @*<a href="/admin/campaign/@item.CampaignId" class="btn btn-primary btn-sm mr-2">Edit</a>*@

                                <form asp-controller="Campaign" asp-action="DeleteCampaign" method="post" style="display: inline;">
                                    <input type="hidden" name="CampaignId" value="@item.CampaignId">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>No campaigns</h3>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>

@section Css{
    <script src="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css"></script>
}
@section Scripts{
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        new DataTable('#campaignTable');
    </script>
}