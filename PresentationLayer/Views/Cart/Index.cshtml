@model CartModel

<h1 class="h3">Shopping Cart</h1>
<hr />

@if (Model.CartItems.Count() == 0)
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-danger" role="alert">
                Sepetinizde urun yok.
            </div>
        </div>
    </div>
}else
{
    <div class="row">
    <div class="col-md-8">
        <div class="text-left">
            <h1 class="h4">Cart Items</h1>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th></th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cartItem in Model.CartItems)
                {
                    <tr>
                        <td>
                            <img src="~/img//@cartItem.ImageUrl" width="100">
                        </td>
                        <td>@cartItem.Name</td>
                        <td>@cartItem.Price TL</td>
                        <td>@cartItem.Quantity</td>
                        <td>@(cartItem.Price * cartItem.Quantity) TL</td>
                        <td>
                            <form asp-controller="Cart" asp-action="DeleteFromCart" method="post">
                                <input type="hidden" name="productId" value="@cartItem.ProductId"/>
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="fa-solid fa-xmark"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-4">
        <div class="text-left">
            <h1 class="h4">Cart Summary</h1>
        </div>
        <table class="table table-hover">
            <tbody>
                <tr>
                    <th>Cart Total</th>
                    <th>@Model.TotalPrice().ToString("c")</th>
                </tr>
                <tr>
                    <th>Shipping</th>
                    <th>Free</th>
                </tr>
                <tr>
                    <th>Cart Total</th>
                    <th>@Model.TotalPrice().ToString("c")</th>
                </tr>
            </tbody>
        </table>
        <div class="text-center">
            <a asp-controller="Shop" asp-action="List" class="btn btn-outline-danger"><i class="fa-solid fa-left-long"></i> Continue Shopping</a>
            <a class="btn btn-success"><i class="fa-solid fa-basket-shopping"></i> Checkout</a>
        </div>
    </div>
</div>
}